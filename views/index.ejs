<section class="grid">
<% if (!shows.length) { %>
<div class="empty">No shows yet. Click “Add show”.</div>
<% } %>
<% shows.forEach(s => { %>
<a class="card" href="/show/<%= s.id %>">
<% if (s.image) { %>
<img src="<%= s.image %>" alt="<%= s.name %>">
<% } %>
<div class="card-body">
<h3><%= s.name %></h3>
<p>
<strong><%= s.watched_eps %></strong> / <%= s.total_eps %> episodes
</p>
<progress max="<%= s.total_eps %>" value="<%= s.watched_eps %>"></progress>
</div>
</a>
<% }) %>
</section>